{
  "name": "gitsoar",
  "version": "1.0.0",
  "description": "GitSoar - GitHub Profile Analyzer Tool for Students",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "github",
    "analyzer",
    "portfolio",
    "developer-tools",
    "student-resources"
  ],
  "author": "GitSoar Team",
  "license": "MIT"
}